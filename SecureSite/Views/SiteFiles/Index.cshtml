@model IEnumerable<SecureSite.Models.SiteFile>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="UploadFile" asp-controller="SiteFiles"
      enctype="multipart/form-data" onsubmit="AJAXSubmit(this);return false;"
      method="post">
    <dl>
        <dt>
            <label for="FileToUpload">File</label>
        </dt>
        <dd>
            <input id="FileToUpload" type="file"
                   name="FileToUpload" />
        </dd>
    </dl>

    <input class="btn btn-outline-info" type="submit" value="Upload" />

    <div style="margin-top:15px">
        <output name="result"></output>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UntrustedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UntrustedName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Download" asp-route-id="@item.Id">Download</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>